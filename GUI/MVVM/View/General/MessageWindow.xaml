<Window x:Class="muzickiKatalog.GUI.MVVM.View.General.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:muzickiKatalog.GUI.MVVM.View.General"
        mc:Ignorable="d"
        Title="MessageWindow" Height="200" Width="300" ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    <Grid Background="{StaticResource BaseColor}">
        <Label x:Name="title" Content="ERROR" Style="{StaticResource naslov}"/>
        <Label x:Name="message" Content="message" HorizontalContentAlignment="Center" Style="{StaticResource regularLabel}" Margin="0,79,0,91"/>
        <Button Content="OK" Width="100" Style="{StaticResource regularButton}" HorizontalAlignment="Left" Margin="104,140,0,0" VerticalAlignment="Top" Click="ok" />
    </Grid>
</Window>
